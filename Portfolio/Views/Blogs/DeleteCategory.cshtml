@model Category
@{
    ViewData["Title"] = "Mike Robinson's Site - Delete Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="deleteCategory">
    <div class="container">
        <!-- Begin Delete Blogs -->
        <h1>Delete Category</h1>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Blog)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Blog.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Blog.Author)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Blog.Author!.FullName)
                </dd>
            </dl>
            <form asp-action="DeleteCategory">
                <input type="hidden" asp-for="@Model.Id"/>
                <input type="submit" value="Delete" class="btn btn-danger"/>
            </form>
        </div>
        <div>
            <a asp-controller="Home" asp-action="Index">Back Home</a>
        </div>
    </div>
</section><!--/. deleteCategory-section -->

@section CustomCss
{
    <link rel="stylesheet" href="css/Blogs/deleteCategory.min.css"/>
}