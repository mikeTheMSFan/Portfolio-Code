@page
@model Disable2FaModel
@{
    ViewData["Title"] = "Mike Robinson's Site - Disable two-factor authentication (2FA)";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<section id="disableTwoFactorAuthentication">
    <div class="container">
        <h3>Disable two-factor authentication (2FA)</h3>

        <div class="alert alert-warning" role="alert">
            <p>
                <strong>This action only disables 2FA.</strong>
            </p>
            <p>
                Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key
                used in an authenticator app you should <a asp-page="./ResetAuthenticator">reset your authenticator keys.</a>
            </p>
        </div>

        <div>
            <form method="post">
                <button class="btn btn-lg default-btn" type="submit">Disable 2FA</button>
            </form>
        </div>
    </div>
</section>