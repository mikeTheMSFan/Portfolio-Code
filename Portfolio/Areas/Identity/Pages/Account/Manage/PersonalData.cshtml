@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Mike Robinson's Site - Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
    Layout = "_Layout";
}

<section id="personalData">
    <h3>Personal Data</h3>

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-10 col-lg-7 col-xl-6">
                <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
                <p>
                    <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                </p>
                <form id="download-data" asp-page="DownloadPersonalData" method="post">
                    <button class="mb-2 btn default-btn" type="submit">Download</button>
                </form>
                <p>
                    <a id="delete" asp-page="DeletePersonalData" class="btn default-btn">Delete</a>
                </p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

@section CustomCss
{
    <link rel="stylesheet" href="~/css/FormStyle.css"/>
}
