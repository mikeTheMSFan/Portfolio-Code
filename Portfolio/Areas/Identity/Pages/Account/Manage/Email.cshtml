@page
@model EmailModel
@{
    ViewData["Title"] = "Mike Robinson's Site - Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
    Layout = "_Layout";
}

<section id="manageEmail">
    <div class="container">
        <h3>Manage Email</h3>
        <div class="row">
            <div class="col-12 col-md-10 col-lg-7 col-xl-6 form-section">
                <form id="email-form" class="form-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="form-floating mb-2 input-group">
                            <input asp-for="Email" class="form-control" disabled/>
                            <div class="input-group-append">
                                <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                            </div>
                            <label asp-for="Email" class="form-label"></label>
                        </div>
                    }
                    else
                    {
                        <div class="form-floating mb-2">
                            <input asp-for="Email" class="form-control" disabled/>
                            <label asp-for="Email" class="form-label"></label>
                            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Send verification email</button>
                        </div>
                    }
                    <div class="form-floating mb-2">
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true"/>
                        <label asp-for="Input.NewEmail" class="form-label"></label>
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-100 btn btn-lg default-btn">Change email</button>
                </form>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}

@section CustomCss
{
    <link rel="stylesheet" href="~/css/FormStyle.css"/>
}
